{% extends "main.html.twig" %}


{% block content %}


<div class="container-fluid">
	<div style="padding:30px">
		<div class="row shadow">
			<div class="col-md-12 pb-4 ">
				<span class="grocery-title"> {{title}} </span>
			</div>

			{% for record in data %}
				<div class="col-md-12 ">
					<div class="row">
						<div class="col-md-2 ">
							<div class="ingredient-image" style="background-image: url({{record.article.image}})"> </div>
						</div>
						<div class="col-md-6 ">
						<h2 style= "color: var(--lighter-green)"> {{record.article.name}} </h2>
						{{record.article.description}}
						</div>
						<div class="col-md-1 d-flex align-items-center justify-content-center ">
						{{ record.number }}
						</div>
						<div class="col-md-1 d-flex align-items-center justify-content-center ">
						<i class="fa fa-euro-sign" style="color: var(--darker-red)"> </i> &nbsp {{ (record.number * record.article.price)/100}}
						</div>
						<div class="col-md-2 d-flex align-items-center justify-content-center ">
						add/rem
						</div>
					</div>
				</div>
			{% endfor %}


				<div class="col-md-12 ">
					<div class="row">
						<div class="col-md-2 ">
							<span class="totaal"> Totaal </span>
						</div>
						<div class="col-md-6 ">
						</div>
						<div class="col-md-1 d-flex align-items-center justify-content-center ">
						</div>
						<div class="col-md-1 d-flex align-items-center justify-content-center ">
						<i class="fa fa-euro-sign" style="color: var(--darker-red)"> </i>

						&nbsp {{record.article.price}}




						</div>
						<div class="col-md-2 d-flex align-items-center justify-content-center ">
						add/rem
						</div>
					</div>
				</div>






		</div>
	</div>
</div>


{% endblock %}